<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="cart"
            type="lk.apiit.eea.stylouse.models.responses.CartResponse" />
        <variable
            name="total"
            type="String" />
    </data>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/cart_item_background">

        <ImageView
            android:id="@+id/product_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:id="@+id/layout_name_size"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{cart.product.name}"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/product_size"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@{cart.size}"
                    android:textSize="12sp"/>
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/cart_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:text="@{`x` + String.valueOf(cart.quantity)}"
                    android:textSize="12sp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/product_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="4dp"
            android:text="@{`LKR ` + total}"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:padding="0dp"/>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/btn_remove"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_margin="4dp"
            android:background="@drawable/icon_remove"
            android:backgroundTint="@color/colorRed"/>
    </LinearLayout>
</layout>