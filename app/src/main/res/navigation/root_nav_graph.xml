            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/rateFragment"
        android:name="lk.apiit.eea.stylouse.ui.RateFragment"
        android:label="fragment_rate"
        tools:layout="@layout/fragment_rate">
        <action
            android:id="@+id/action_rateFragment_to_productFragment"
            app:destination="@id/productFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right"
            app:popUpTo="@id/productFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/orderDetailFragment"
